<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.example.alesha.percomsg.UserProfile">

    <ImageButton
        android:id="@+id/btnConsent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="0"
        android:src="@mipmap/bluetooth40"
        android:text="@string/band_settings" />

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="15dp"
        card_view:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/editProfileBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"

                android:src="@mipmap/ic_launcher_round"
                android:text="@string/edit_profile" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/firstTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="First Name"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/lastTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:text="Last Name"
                    android:textSize="18dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/bioTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:text="Bio"
                android:gravity="center"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/hobbyTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="[Hobbies]"
                android:textSize="18dp" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="325dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/colorPrimaryDark"
            android:text="Daily Challenge"
            android:textAlignment="center"
            android:textColor="@color/colorForeground"
            android:textSize="21dp" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="325dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        card_view:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/activityHistoryBtn"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@color/colorPrimaryDark"
                android:fadingEdge="vertical"
                android:text="Activity History"
                android:textAllCaps="false"
                android:textColor="@color/colorForeground"
                android:textSize="21dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
