<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="325dp"
        android:layout_height="542dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:background="@color/colorPrimaryDark"
                android:text="Band Settings"
                android:textAlignment="center"
                android:textColor="@color/colorForeground"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/txtHeartRate"
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:layout_weight="1"
                android:text="Heart Rate" />

            <TextView
                android:id="@+id/txtAccel"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Accelerometer" />

            <TextView
                android:id="@+id/txtBandSettings"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Band Settings:" />

            <TextView
                android:id="@+id/txtGesture"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Gesture:" />

            <TextView
                android:id="@+id/txtChain"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Chain:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnGetConsent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="Get Consent" />

                <Button
                    android:id="@+id/btnStartReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal
"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="Start Report" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/tbtnModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textOff="Generate Model"
                    android:textOn="Model Generated"/>

                <ToggleButton
                    android:id="@+id/tbtnDetect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textOff="Start Detection"
                    android:textOn="Detecting Gestures"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>